<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="projet.supercalcmobile.ControllerActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/login_title_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Connexion"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/login_accountname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom de compte : "
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/login_accountname_value"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Nom de compte"
            android:inputType="textEmailAddress"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/login_password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mot de passe : "
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/login_password_value"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Mot de passe"
            android:inputType="textPassword"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/login_stayconnected_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enregistrer les informations de connexion"
            android:textStyle="bold"
            android:textColor="#FF0000"
            />
        <CheckBox
            android:id="@+id/login_stayconnected_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/login_login_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Se connecter"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/login_createaccount_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="CrÃ©er un compte"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:gravity="center"
            />
    </LinearLayout>
</LinearLayout>
